FROM            <base_image>
WORKDIR         /usr/local/apache2  
RUN             apt install 
COPY            . /usr/local/apache2/
COPY            data.zip /usr/local/apache2/data.zip
ADD             https://github.com/nextopsvideos/mvn_sample_app/blob/main/README.md /usr/local/apache2/
ADD             data.zip /usr/local/apache2/data/
ENV             MONGODB_INIT_ROOT_USERNAME=root 
ENV             MONGODB_INIT_ROOT_PASSWORD=admin123
EXPOSE          80
ARG             MONGODB_INIT_ROOT_USERNAME=root 
CMD             ifconfig            #overridable
ENTRYPOINT      ifconfig            #not overridable