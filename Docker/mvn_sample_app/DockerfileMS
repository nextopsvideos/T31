#Multi-staged docker file
#Stage1 
FROM maven:3.8.4-openjdk-11 as stage1
WORKDIR /app
COPY pom.xml .
RUN mvn dependency:go-offline
COPY src ./src
RUN mvn package   

#Stage2
FROM openjdk:11-jre-slim
WORKDIR /app 
COPY --from=stage1 /app/target/bim-1.0.jar .
EXPOSE 8000
CMD ["java", "-jar", "target/bmi-1.0.jar"]